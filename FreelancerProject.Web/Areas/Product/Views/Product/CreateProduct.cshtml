@{
    ViewData["Title"] = "Create Product";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2>Create Product</h2>
    <form asp-action="YourAction" asp-controller="YourController" method="post">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Enter name">
        </div>
        <br />
        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="email" class="form-control" id="Email" asp-for="Email" placeholder="Enter email">
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

